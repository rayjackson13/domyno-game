.head 
    height 100vh
    min-height 600px
    position relative
    background-color rgba(0,0,0,.55)

    &::after
        content: ''
        position absolute
        top 0
        bottom 0
        left 0
        right 0
        background-image url('/img/head.jpg')
        background-size cover
        background-repeat no-repeat
        background-position center
        z-index -1

    &__title
        padding 40px 0
        display flex
        justify-content center
        align-items flex-end
        height 50%
        background-color transparent
        font-size 48px

    &__desc
        font-size 24px

.games
    padding 60px 0

    &__item
        display block
        color $text-color
        padding 20px 15px
        border-radius: 15px
        transition all .25s
        background-color transparent

        &:hover
            background-color #5f5f5f
            color $text-color
            text-decoration none
            transform translateY(-10px)
            padding-bottom 25px
            

    